<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView10"
        style="@style/headerBackgroundGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonChangeStatus"
        style="@style/buttonGreen"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="96dp"
        android:text="@string/buttonChangeStatus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ID_PACKID_VIEW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="149dp"
        android:text="Paczka #"
        android:textColor="@color/colorPrimary"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/ID_STATUS_VIEW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="Status:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ID_PACKID_VIEW" />

    <TextView
        android:id="@+id/textViewSenderAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adres Nadawcy"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textViewCourierId"
        app:layout_constraintTop_toBottomOf="@+id/textViewCourierId" />

    <TextView
        android:id="@+id/textViewCourierId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kurier:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/ID_STATUS_VIEW"
        app:layout_constraintTop_toBottomOf="@+id/ID_STATUS_VIEW" />

    <TextView
        android:id="@+id/textViewRecipientAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adres Odbiorcy"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textViewSenderAddress"
        app:layout_constraintTop_toBottomOf="@+id/textViewSenderAddress" />

    <Spinner
        android:id="@+id/spinnerStatusSelect"
        android:layout_width="355dp"
        android:layout_height="36dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonChangeStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nowy status:"
        app:layout_constraintBottom_toTopOf="@+id/spinnerStatusSelect"
        app:layout_constraintStart_toStartOf="@+id/spinnerStatusSelect" />

</androidx.constraintlayout.widget.ConstraintLayout>