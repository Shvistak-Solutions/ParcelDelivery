<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.courier.CourierActivity">

    <TextView
        android:id="@+id/textView6"
        style="@style/headerBackgroundGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonParcelList"
        style="@style/buttonGreen"
        android:layout_width="312dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:text="@string/parcel_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonLogoutCou"
        style="@style/buttonGreen"
        android:layout_marginStart="159dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="164dp"
        android:text="Wyloguj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        style="@style/headerWhite"
        android:layout_marginStart="155dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="155dp"
        android:text="Kurier"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogoutCou" />

    <ImageView
        android:id="@+id/ID_MAIN_AVATAR_VIEW"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogoutCou"
        app:srcCompat="@android:drawable/btn_dialog" />

    <Button
        android:id="@+id/buttonCourierAccount"
        style="@style/buttonGreen"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/my_account"
        app:layout_constraintBottom_toTopOf="@+id/buttonParcelList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPresence"
        style="@style/buttonGreen"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/present"
        app:layout_constraintBottom_toTopOf="@+id/buttonCourierAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>