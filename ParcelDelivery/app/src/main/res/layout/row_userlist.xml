<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >
    <TextView
        android:id="@+id/textListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="17dp" />
    <TextView
        android:id="@+id/textListSurname"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textListName"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_toEndOf="@id/textListName" />
    <TextView
        android:id="@+id/textListEmail"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textListName"
        android:layout_marginTop="7dp"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/textListPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textListName"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:textSize="14dp" />


</RelativeLayout>