<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ParcelDelivery">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.password_reset.ChangePasswordActivity"></activity>
        <activity android:name=".ui.avatar.AvatarActivity"></activity>
        <activity android:name=".ui.courier.CourierParcelListActivity" />
        <activity android:name=".ui.parcel.ParcelAddActivity" />
        <activity android:name=".ui.parcel.ParcelListActivity" />
        <activity android:name=".ui.coordinator.CoordinatorActivity" />
        <activity android:name=".ui.storekeeper.StorekeeperActivity" />
        <activity android:name=".ui.storekeeper.StorehouseActivity" />
        <activity android:name=".ui.storekeeper.PackActivity" />
        <activity android:name=".ui.courier.CourierActivity" />
        <activity android:name=".ui.manager.ManagerActivity" />
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.user.UserListActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.user.UserAddActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.user.UserDetailsActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.user.UserScheduleActivity"
            android:label="@string/app_name" />
        <activity android:name=".ui.password_reset.ForgotPasswordActivity" />
    </application>
</manifest>